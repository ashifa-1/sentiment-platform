# Database - Note the 'db' hostname for Docker networking
POSTGRES_USER=sentiment_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=sentiment_db
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://sentiment_user:secure_password_123@db:5432/sentiment_db

# Redis - Note the 'redis' hostname
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_STREAM_NAME=social_posts_stream
REDIS_CONSUMER_GROUP=sentiment_workers

# AI Models (Required for Phase 3)
HUGGINGFACE_MODEL=distilbert-base-uncased-finetuned-sst-2-english
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base

# Alert Thresholds (from Phase 1 requirements)
ALERT_NEGATIVE_RATIO_THRESHOLD=2.0
ALERT_WINDOW_MINUTES=5
ALERT_MIN_POSTS=10